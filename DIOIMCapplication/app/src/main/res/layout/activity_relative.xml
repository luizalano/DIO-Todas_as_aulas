<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundotela">

    <TextView
        android:id="@+id/tituloapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/calcula_imc"
        style="@style/Vermelhos30sp" />

    <EditText
        android:id="@+id/txtPeso"
        android:layout_below="@id/tituloapp"
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_margin="15dp"
        android:padding="16dp"
        android:inputType="number"
        android:hint="@string/peso_kg"
        style="@style/Vermelhos30sp" />

    <EditText
        android:id="@+id/txtAltura"
        android:layout_below="@id/tituloapp"
        android:layout_toRightOf="@id/txtPeso"
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="15dp"
        android:inputType="number"
        android:hint="@string/altura_cm"
        style="@style/Vermelhos30sp" />

    <Button
        android:id="@+id/btnCalcula"
        android:layout_below="@id/txtPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:text="@string/calcula_imc"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_toRightOf="@id/btnCalcula"
        android:layout_below="@id/txtPeso"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:text=""
        style="@style/Resultado30sp" />

</RelativeLayout>